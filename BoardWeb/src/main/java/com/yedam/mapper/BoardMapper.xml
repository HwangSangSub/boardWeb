<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yedam.mapper.BoardMapper">
	<select id="selectList" resultType="com.yedam.vo.BoardVO">
		SELECT board_no
			, title
			, content
			, writer
			, view_cnt
			, write_date
		FROM tbl_board
		ORDER BY board_no
	</select>
	<select id="selectBoard" parameterType="int"
		resultType="com.yedam.vo.BoardVO">
		SELECT board_no
			, title
			, content
			, writer
			, view_cnt
			, write_date
		FROM tbl_board
		WHERE board_no = #{boardNo}
	</select>

	<!-- 매개 변수는 parameterType 받아짐 -->
	<insert id="insertBoard" parameterType="com.yedam.vo.BoardVO">
		INSERT INTO
		tbl_board(board_no, title, content, writer)
		VALUES (board_seq.NEXTVAL,#{title}, #{content}, #{writer})
	</insert>

	<update id="updateBoard" parameterType="com.yedam.vo.BoardVO">
		UPDATE tbl_board
		<set>
			<if test="title != null">
				title = #{title}
			</if>
			<if test="content != null">
				,content = #{content}
			</if>
		</set>
		WHERE board_no = #{boardNo}
	</update>

	<delete id="deleteBoard" parameterType="com.yedam.vo.BoardVO">
		DELETE FROM tbl_board
		WHERE board_no = #{boardNo}
	</delete>

</mapper>